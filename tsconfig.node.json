{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "apps/**/vite.config.*",
    "apps/**/vitest.config.*",
    "apps/**/cypress.config.*",
    "apps/**/nightwatch.conf.*",
    "apps/**/playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [
      "node"
    ]
  }
}